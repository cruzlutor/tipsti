@import 'mixin.styl'

.list-post
    ul
        padding 0px
        margin 0px
        
    li
        list-style none
        margin 0 0 40px 0
        
        h3
            margin 4px 0 0 0 !important
            color #333
            font-size 1.6rem
            a
                color inherit
                &:hover
                    text-decoration underline
       
.post
    overflow hidden
    padding 30px 0 
    border-bottom 1px #DDD solid
    
    &:first-child
        padding-top 0px

    .post-image
        float left
        width 265px
        
    .post-resume
        margin-left: 290px;
        overflow hidden
        
    .post-title
        margin-top 0px
        font-size 2.6rem
        line-height 3.4rem
        // text-transform uppercase
        color #2692FF
        
        a
            color inherit
            &:hover
                text-decoration underline

    .post-excerpt
        font-size 1.2rem
        font-family "Merriweather", serif
        
    .post-meta
        font-size: 1.5rem;
        line-height: 2.2rem;
        
        a
            color #9EABB3
            text-decoration none
            
            &:hover
                text-decoration underline
        

        .avatar 
            width 24px
            height 24px
            float left
            margin-right 9px
            border-radius(100%)
            
        .post-date
            display inline-block
            margin-left 8px
            padding-left 12px
            border-left #d5dbde 1px solid
            text-transform uppercase
            font-size 1.3rem
            color #9EABB3
            white-space nowrap