@require 'mixin'

@media (max-width:1100px)

    .post-loop
        .post-excerpt
            display none
        
    .share-tipsti
        display none

@media (max-width:990px)
    body
        padding 80px  0 0 0
        box-sizing(border-box)
        
    #header
        top 0px
        position fixed
        
    .fluid-right
        display none
        
    .post-loop
        .post-excerpt
            display block
        
@media (max-width:760px)

    body
        padding 60px  0 0 0
        
    #header
        .wrapper
            padding 10px 20px !important
        
        .nav
            display none
            
    .wrapper
        padding 0 20px !important
            
    .post-loop
        .post
            width 48%
            float left
            // height 300px
            border-bottom 0px
            
            &:nth-child(even)
                padding-left 4%
                
            &:nth-child(2)
                padding-top 0px

        .post-image
            width 100% !important
            float none
            
        .post-resume
            margin 0px !important

        .post-excerpt
            display none
            
        .post-title
            padding 10px 0 0 0
            font-size 1.8rem !important
            line-height 2.4rem

        .post-meta
            display none


/* portrait mobiles */
@media (max-width:500px) 
            
    // .wrapper
