/**
 * Utils & mixins
 */
 
vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

text-shadow() 
    vendor('text-shadow', arguments)

box-shadow() 
    vendor('box-shadow', arguments)
  
transition()
    vendor('transition', arguments)
    
transform()
    vendor('transform', arguments)

border-radius()
    vendor('border-radius', arguments)

box-sizing()
    vendor('box-sizing', arguments)

flex-box()
    display flex
